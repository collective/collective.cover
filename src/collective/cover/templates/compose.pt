<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.cover">
<body>

<metal:js fill-slot="javascript_head_slot">
    <script tal:attributes="src string:${view/static}/createjs/deps/underscore-min.js"></script>
    <script tal:attributes="src string:${view/static}/createjs/deps/backbone-min.js"></script>
    <script tal:attributes="src string:${view/static}/createjs/deps/vie-min.js"></script>

    <!-- Tags input is needed for the Tag widget -->
    <script tal:attributes="src string:${view/static}/createjs/deps/jquery.tagsinput.min.js"></script>

    <!-- rdfQuery and annotate are only needed for the Hallo
    annotations plugin -->
    <script tal:attributes="src string:${view/static}/createjs/deps/jquery.rdfquery.min.js"></script>
    <script tal:attributes="src string:${view/static}/createjs/deps/annotate-min.js"></script>

    <script tal:attributes="src string:${view/static}/createjs/deps/rangy-core-1.2.3.js"></script>
    <script tal:attributes="src string:${view/static}/createjs/deps/hallo-min.js"></script>
    <script type="text/javascript"
        tal:attributes="src string:${view/static}/createjs/create-min.js">
    </script>
    <script type="text/javascript"
        tal:attributes="src string:${view/static}/cover.js">
    </script>

    <script type="text/javascript">
      jQuery(document).ready(function() {
        jQuery(window).unload(plone.UnlockHandler.execute);
      });
    </script>
</metal:js>

<metal:styles fill-slot="style_slot">

    <link rel="stylesheet" type="text/css" media="screen" href=""
          tal:attributes="href string:${view/static}/createjs/font-awesome/css/font-awesome.css/" />

    <link rel="stylesheet" type="text/css" media="screen" href=""
          tal:attributes="href string:${view/static}/createjs/themes/create-ui/css/create-ui.css" />

    <link rel="stylesheet" type="text/css" media="screen" href=""
          tal:attributes="href string:${view/static}/createjs/themes/midgard-notifications/midgardnotif.css" />

    <link rel="stylesheet" type="text/css" media="screen" href=""
          tal:attributes="href string:${view/static}/cover.css" />
</metal:styles>

<metal:main fill-slot="main">
    <div tal:define="layout nocall:context/@@layout"
        tal:replace="structure layout/render_compose" />
    <div class="content-screenlet"
        tal:replace="structure context/@@select-content-screenlet" />
</metal:main>

</body>
</html>
