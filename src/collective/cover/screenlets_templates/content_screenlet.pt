<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="collective.cover"
      tal:omit-tag="">
<body tal:omit-tag="">

<div id="screenlet-content-search" class="right  ui-widget-content">

    <div class="close" i18n:translate="">X</div>

    <ul class="formTabs">
      <li class="formTab"><a href="#recent" i18n:translate="">Recent items</a></li>
      <li class="formTab"><a href="#content-tree" i18n:translate="">Content tree</a></li>
    </ul>

    <div class="panes">
      <div id="recent" class="tab-pane active">
        <input id="screenlet-content-search-input" type="text" />
        <input type="button" value="ok" id="screenlet-content-search-button"
         tal:attributes="data-url view/post_url"
         i18n:attributes="value" />
        <ul id="item-list">
            <li tal:replace="structure context/@@content-search" />
        	<a class="next" href="">more</a>
        </ul>
		<script>
			var page = 1; 
			$("#item-list a.next").live("click", function(){
				$.ajax({
					url: "@@content-search",
					data: {'page': page},
					async: false
				}).done(function(data) { 
					$('#item-list a.next').prepend(data);
					page += 1;
				});
				return false;
			});
        </script>
      </div>

      <div id="content-trees" class="tab-pane">
          <input id="screenlets-content-trees" name="screenlets-content-trees" type="text" /> <span id="filter-count"></span>
          <div class="uponelevel"><a id="uponelevel" class="link-parent" href="javascript:void(0)" style="display: none;">Up level</a></div>
          <div>
           <ul class="configlets">
            <li id="home" style="display: inline;">
             <a tal:attributes="href python:'''javascript:coveractions.getFolderContents('%s','@@jsonbytype')''' %(context.portal_url())">
              <img alt="" src="logoIcon.gif"><span>Home</span>
             </a>
            </li>
           </ul>
          </div>

          <ul id="item-list">
            <li />
          </ul>

          <fieldset id="general_panel">
            <div id="internalpath" class="formHelp"></div>
         </fieldset>


      </div>
    </div>

    <div id="screenlet-content-search-compose-button" style="display: none;"
        i18n:translate="">Add Content</div>

</div>
</body>
</html>
