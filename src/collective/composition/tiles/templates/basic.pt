<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.composition">

<body>
    <tal:text define="title view/get_title;
                      description view/get_description;
                      image view/get_image;
                      is_empty view/is_empty;">
        <p tal:condition="is_empty">
            Please edit the tile to enter some data.
        </p>
        <tal:empty tal:condition="python: not is_empty">
            <h1 tal:content="title">Title</h1>
            <p tal:content="description">Description</p>
             <img tal:define="scales view/@@images;
                              thumbnail python: scales.scale('image', width=200, height=200);"
                  tal:condition="thumbnail"
                  tal:attributes="src thumbnail/url;
                                  width thumbnail/width;
                                  height thumbnail/height" />
        </tal:empty>
    </tal:text>
</body>
</html>
