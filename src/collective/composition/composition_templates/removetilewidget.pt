<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<metal:styles fill-slot="style_slot">
  <link rel="stylesheet" type="text/css" media="screen" href=""
        tal:attributes="href string:${view/static}/composition.css" />
  <link rel="stylesheet" type="text/css" media="screen" href=""
        tal:attributes="href string:${view/static}/jquery.contextmenu.css" />
</metal:styles>
<body>
<metal:main fill-slot="main">
    <h1 class="documentFirstHeading"
          i18n:translate="alert_really_delete">
        Do you really want to delete this item?
      </h1>
      
    <form method="POST"
        action="#"
        tal:attributes="action context_state/current_page_url"
        id="delete_confirmation">
    <div class="formControls">

        <input type="hidden"
                name="form.submitted"
                value="1"
                />

        <input class="destructive"
                type="submit"
                value="Delete"
                i18n:attributes="value;"
                />
        <input class="standalone"
                type="submit"
                value="Cancel"
                name="form.button.Cancel"
                i18n:attributes="value label_cancel;"
                />
    </div>

    <input tal:replace="structure context/@@authenticator/authenticator" />

    </form>
</metal:main>
</body>
</html>

