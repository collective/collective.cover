<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="collective.composition"
      tal:omit-tag="">
<body tal:omit-tag="">

    <tal:mode define="mode options/mode;">
        <tal:view tal:condition="python:mode == 'view'">
        <div tal:define="section options/section | nothing;
                        tile_type python:section.get('tile-type', '');
                        tile_id python:section.get('id', '');"
            tal:condition="section">
            <div tal:attributes="class python:'tile %s' % section.get('class', '');
                                data-tile string:${context/absolute_url}/@@${tile_type}/${tile_id};
                                id tile_id" />
        </div>
        </tal:view>
        <tal:compose tal:condition="python:mode == 'compose'">
        <div tal:define="section options/section | nothing;
                        tile_type python:section.get('tile-type', '');
                        tile_id python:section.get('id', '');"
            tal:condition="section">
            <div tal:attributes="class python:'tile %s' % section.get('class', '');
                                data-tile string:${context/absolute_url}/@@${tile_type}/${tile_id};
                                data-tile-type tile_type;
                                data-tile-valid-ct python:view.accepted_ct_for_tile(tile_type);
                                id tile_id" />
            <a href="#"
            class="edit-tile-link"
            tal:attributes="href string:${context/absolute_url}/@@edit-tile/${tile_type}/${tile_id}">Edit</a>

        </div>
        </tal:compose>
        <tal:layoutedit tal:condition="python:mode == 'layout_edit'">
        <div tal:define="section options/section | nothing;
                        tile_type python:section.get('tile-type', '');
                        tile_id python:section.get('id', '');"
             tal:condition="section">
            <div tal:attributes="class python:'tile %s' % section.get('class', '');
                                 data-tile-type tile_type;
                                 id tile_id">
                <a href="#"
                class="config-tile-link"
                tal:condition="python:view.tile_is_configurable(tile_type)"
                tal:attributes="href string:${context/absolute_url}/@@configure-tile/${tile_type}/${tile_id}">Config</a>
            </div>

        </div>
        </tal:layoutedit>
    </tal:mode>

</body>
</html>

